<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="@dimen/small_div"
android:layout_marginBottom="@dimen/small_div">

    <CheckBox
        android:id="@+id/uncheckedCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="@dimen/checkbox_min" />


    <EditText
        android:id="@+id/itemText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/checkbox_text_offset"
        android:layout_marginLeft="@dimen/checkbox_text_offset"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="end"
        android:ems="10"
        android:hint="@string/name_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLines="@integer/max_lines_item"
        android:textSize="@dimen/text_small" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="@dimen/icons_size"
        android:layout_height="@dimen/icons_size"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@string/ellipses"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_close" />

</LinearLayout>
